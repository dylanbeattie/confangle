%html
  %head
    %link(rel="stylesheet" type="text/css" href="/styles.css")
    %title
      FullStack 2018 CFP
  %body
    %a(href="/")
      All Sessions
    -sessions.each do |session|
      %section
        %h1
          =("#" + session['NO'] + ":")
          =session['Title of Talk/Workshop']
          (
          %a(href="?speaker=#{URI.encode(session['Name'])}")
            =session['Name']
          =sessions.select { |s| s['Name'] == session['Name'] }.length 
          talks
          )
        %p= session['Abstract']
        %p
          %strong Themes:
          =session['Themes']
          %span(class='audience-level #{session['Audience Level'].split(':')[0].downcase}')
            =session['Audience Level'].split(':')[0]
        %p
          
        -['Themes', 'Audience Level', 'Submission type',  'E-mail address', 'Twitter', 'Phone', 'Organisation', 'Location/City', 'Speaker Bio', 'First-Time Speaker', 'Gender', 'T&L ', 'Notes'].each do |key|
          %dt= key
          %dd= session[key]
      %hr
    end